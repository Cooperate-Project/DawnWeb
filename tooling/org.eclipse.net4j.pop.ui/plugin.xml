<plugin>

   <extension
         point="org.eclipse.ui.views">
      <category
            id="org.eclipse.net4j.pop"
            name="POP Process Tooling">
      </category>
      <view
            category="org.eclipse.net4j.pop"
            class="org.eclipse.net4j.pop.internal.ui.views.StreamsView"
            icon="icons/sample.gif"
            id="org.eclipse.net4j.pop.StreamsView"
            name="Streams">
      </view>
   </extension>
   
   <extension
         point="org.eclipse.ui.decorators">
      <decorator
            adaptable="true"
            icon="icons/pop_project_ovr.gif"
            id="org.eclipse.net4j.pop.ui.PopProjectDecorator"
            label="POP Projects"
            lightweight="true"
            location="TOP_RIGHT"
            state="true">
         <enablement>
            <and>
               <objectClass
                     name="org.eclipse.core.resources.IProject">
               </objectClass>
               <objectState
                     name="projectNature"
                     value="org.eclipse.net4j.pop.PopProjectNature">
               </objectState>
            </and>
         </enablement>
      </decorator>
      <decorator
            adaptable="true"
            icon="icons/pop_product_ovr.gif"
            id="org.eclipse.net4j.pop.ui.PopProductDecorator"
            label="POP Products"
            lightweight="true"
            location="TOP_RIGHT"
            state="true">
         <enablement>
            <and>
               <objectClass
                     name="org.eclipse.core.resources.IProject">
               </objectClass>
               <objectState
                     name="projectNature"
                     value="org.eclipse.net4j.pop.PopProductNature">
               </objectState>
            </and>
         </enablement>
      </decorator>
   </extension>

</plugin>
